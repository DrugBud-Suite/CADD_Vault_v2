rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to all packages
    match /packages/{package} {
      allow read: if true;
      
      // Only allow updates to the rating fields
      allow update: if request.resource.data.diff(resource.data).affectedKeys().hasOnly(['userRatings', 'averageRating', 'ratingCount']);
      
      // Disable creation/deletion from client
      allow create, delete: if false;
    }
    
    // Secure admin routes
    match /admin/{document=**} {
      allow read, write: if false;
    }
  }
}